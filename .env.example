# ======================================
# Navertrafic 환경 변수 설정
# ======================================
# 사용법: 이 파일을 .env 로 복사하고 실제 값으로 수정하세요.

# 네이버 URL
NAVER_URL=https://www.naver.com
NAVER_SHOPPING_URL=https://shopping.naver.com

# ADB 설정
ADB_DEVICE_ID=  # adb devices 명령어로 확인한 기기 ID (예: RF8M12345XY)
ADB_WIRELESS=false  # 무선 ADB 사용 여부
ADB_IP=  # 무선 ADB 사용 시 기기 IP (예: 192.168.0.100:5555)

# 자동화 모드 선택
AUTOMATION_MODE=adb  # adb, appium, cdp 중 선택
APPIUM_SERVER=http://localhost:4723
CHROME_DEBUG_PORT=9222

# 로깅 설정
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/navertrafic.log

# 테스트 설정
TEST_ITERATIONS=100  # 각 케이스별 반복 횟수
STAY_DURATION_MIN=30  # 최소 체류 시간 (초)
STAY_DURATION_MAX=60  # 최대 체류 시간 (초)
SCROLL_PROBABILITY=0.7  # 스크롤 확률
ACTION_WAIT_MIN=2.0  # 액션 간 최소 대기 시간 (초)
ACTION_WAIT_MAX=5.0  # 액션 간 최대 대기 시간 (초)

# 액션 확률 분포
ACTION_CART_PROBABILITY=0.3  # 장바구니 담기 30%
ACTION_REVIEW_PROBABILITY=0.4  # 리뷰 클릭 40%
ACTION_QNA_PROBABILITY=0.2  # 1:1 문의 20%
ACTION_BROWSE_PROBABILITY=0.1  # 그냥 둘러보기 10%

# IP 변경 설정
AIRPLANE_MODE_DURATION=3  # 비행기모드 유지 시간 (초)
NETWORK_RECONNECT_TIMEOUT=10  # 네트워크 재연결 타임아웃 (초)
VERIFY_IP_CHANGE=true  # IP 변경 확인 여부

# 순위 체크 설정
RANK_CHECK_DELAY=1800  # 액션 후 순위 체크까지 대기 시간 (초, 기본 30분)
RANK_CHECK_MAX_PAGE=10  # 최대 몇 페이지까지 체크할지

# 데이터 저장 설정
DATA_STORAGE_TYPE=json  # json, sqlite, csv
DATA_BACKUP_ENABLED=true
DATA_BACKUP_TIME=00:00  # 매일 백업 시간 (HH:MM)

# 성능 모니터링
MONITOR_BATTERY=true  # 배터리 모니터링
BATTERY_THRESHOLD=20  # 배터리 최소 % (이하 시 대기)
MONITOR_TEMPERATURE=true  # 기기 온도 모니터링
TEMPERATURE_THRESHOLD=45  # 온도 임계값 (℃)

# 에러 핸들링
MAX_RETRY_ATTEMPTS=3  # 최대 재시도 횟수
RETRY_DELAY=5  # 재시도 간 대기 시간 (초)

# 개발 모드
DEBUG_MODE=false
SCREENSHOT_ON_ERROR=true  # 에러 발생 시 스크린샷 저장
DRY_RUN=false  # 실제 액션 없이 테스트
